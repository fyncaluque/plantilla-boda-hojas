---
import FlechaAnimada from '../components/FlechaAnimada.astro';
import HojasUno from '../components/HojasUno.astro';
import HojasDos from '../components/HojasDos.astro';
import HojasTres from '../components/HojasTres.astro';
---

<section id="portada" class="relative grid place-content-center pb-[70%] md:pb-[20%]">
  <main class="flex flex-col place-content-end h-screen min-h-dvh z-10 md:place-content-center">
    <!-- Fecha y nombres -->
    <div class="w-[80%] mx-auto mb-8 xl:pb-14 xl:flex xl:flex-col xl:gap-6">
      <!-- Fecha de la boda -->
      <div class="flex items-center justify-between gap-4 w-[80%] mx-auto">
        <div class="w-full h-[1px] bg-white"></div>
        <span class="text-2xl font-light leading-9 text-white">24.08.2024</span>
        <div class="w-full h-[1px] bg-white"></div>
      </div>

      <!-- Nombres de los novios -->
      <h1
        class="flex flex-col items-center justify-center text-8xl font-cookie xl:flex-row xl:gap-6 xl:text-9xl"
      >
        <span class="text-white">Luis</span>
        <span
          class="flex items-center justify-center text-4xl text-color-1 bg-color-3 rounded-full size-12 p-2 xl:text-4xl xl:size-14"
          >&</span
        >
        <span class="text-white">Rosa</span>
      </h1>

      <!-- Linea inferior -->
      <div class="w-[80%] h-[1px] bg-white mx-auto"></div>
    </div>

    <!-- Frase de la boda -->
    <div
      class="text-xl md:text-3xl font-light text-center flex flex-col gap-4 mb-14"
    >
      <img
        src="/svg/comilla-apertura.svg"
        alt="Comillas de apertura"
        class="w-7 xl:w-8 mx-auto"
      />
      <p class="text-white">
        Todos somos mortales,<br /> hasta el primer beso y la segunda copa de vino
      </p>
      <img
        src="/svg/comilla-cierre.svg"
        alt="Comillas de cierre"
        class="w-7 xl:w-8 mx-auto"
      />
    </div>

    <!-- Flecha animada -->
    <FlechaAnimada />
  </main>
  <!-- Hojas animadas -->
  <HojasUno />
  <HojasDos />
  <HojasTres/>
</section>

<style>
  /* Imagen de fondo de la portada */
  #portada {
    position: relative;
    background-image: url('/images/portada.webp');
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }

  /* Overlay de la portada */
  #portada::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(74, 79, 96, 0.65);
    z-index: 0;
  }

  #portada::after{
    content: '';
    position: absolute;
    background-image: url('/svg/ondas01.svg');
    background-repeat: no-repeat;
    background-position: bottom center;
    height: 100%;
    width: 100%;
    bottom: -10%;
    z-index: 1;
  }

  @media screen and (max-width: 768px) {
    #portada {
        background-image: url('/images/portada-mobile.webp');
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        background-attachment: unset;
    }

    #portada::after{
        bottom: -2%;
    }
  }
</style>
