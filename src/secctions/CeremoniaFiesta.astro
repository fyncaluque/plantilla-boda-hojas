---
import Ceremonia from '../components/Ceremonia.astro';
import EventoInfo from '../components/EventoInfo.astro';
import Fiesta from '../components/lotties/Fiesta.astro';
import HojasCuatro from '../components/lotties/HojasCuatro.astro';
---

<section id="ceremonia-fiesta" class="relative pb-[35%] md:pb-[20%]">
  <div class="container mx-auto xl:max-w-[1140px]">
    <div class="grid md:grid-cols-2 pb-8 gap-y-16">
      <!-- Ceremonia -->
      <div>
        <EventoInfo
          titulo="Ceremonia"
          dia="24.08.2024"
          hora="19:00"
          lugar="Plaza de la Reina"
          direccion="Calle los Encinos #123"
        >
          <Ceremonia />
        </EventoInfo>
      </div>
      <!-- Celebracion -->
      <div>
        <EventoInfo
          titulo="CelebraciÃ³n"
          dia="24.08.2024"
          hora="20:00"
          lugar="Restaurante el Encino"
          direccion="Calle las mercas #123"
        >
        <Fiesta/>
      </EventoInfo>
      </div>
    </div>
  </div>
  <!-- Animaciones -->
   <HojasCuatro className="absolute bottom-[38%] right-0 w-[30%] md:w-[13%] md:bottom-[20%]" loop={false}/>
</section>

<style>
  #ceremonia-fiesta {
    background-image: url('/svg/lineas01.svg');
    background-repeat: no-repeat;
    background-position: top center;
  }

  #ceremonia-fiesta::after {
    content: '';
    position: absolute;
    background-image: url('/svg/ondas02.svg');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: bottom center;
    width: 100%;
    height: 100%;
    bottom: 0;
  }
</style>
