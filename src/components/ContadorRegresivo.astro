---
// Fecha de fin de la cuenta regresiva o fecha del evento en formato Unix Timestamp
// Recurso de conversion en milisegundos: https://www.epochconverter.com/
const TIMESTAMP_END = 1723235400000;
---

<div data-end={TIMESTAMP_END} class="flex">
  <div class="flex flex-col border-r border-[#ccc] px-2 md:px-3">
    <span data-days class="text-3xl font-bold text-[#868686] text-center md:text-4xl">00</span>
    <span class="text-lg font-light text-tertiary text-center">d√≠as</span>
  </div>
  <div class="flex flex-col border-r border-[#ccc] px-2 md:px-3">
    <span data-hours class="text-3xl font-bold text-[#868686] text-center md:text-4xl">00</span>
    <span class="text-lg font-light text-tertiary text-center">hs</span>
  </div>
  <div class="flex flex-col border-r border-[#ccc] px-2 md:px-3">
    <span data-minutes class="text-3xl font-bold text-[#868686] text-center md:text-4xl">00</span>
    <span class="text-lg font-light text-tertiary text-center">min</span>
  </div>
  <div class="flex flex-col px-2 md:px-3">
    <span data-seconds class="text-3xl font-bold text-[#868686] text-center md:text-4xl">00</span>
    <span class="text-lg font-light text-tertiary text-center">seg</span>
  </div>
</div>

<script>
  const SECOND = 1000;
  const MINUTE = SECOND * 60;
  const HOUR = MINUTE * 60;
  const DAY = HOUR * 24;

  function init() {
    const $countdown = document.querySelector('[data-end]');

    if (!$countdown) return;

    const $days = document.querySelector('[data-days]');
    const $hours = document.querySelector('[data-hours]');
    const $minutes = document.querySelector('[data-minutes]');
    const $seconds = document.querySelector('[data-seconds]');

    const timestamp = $countdown.getAttribute('data-end');

    if (!timestamp) return;

    const date = new Date(+timestamp).getTime();

    const formatTime = (time) => {
      return Math.floor(time).toString().padStart(2, '0');
    };

    function updateCountdown() {
      const now = Date.now();
      const diff = date - now;

      $days.innerHTML = formatTime(diff / DAY);
      $hours.innerHTML = formatTime((diff % DAY) / HOUR);
      $minutes.innerHTML = formatTime((diff % HOUR) / MINUTE);
      $seconds.innerHTML = formatTime((diff % MINUTE) / SECOND);
    }

    setInterval(updateCountdown, SECOND);
  }

  init();
</script>
